datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  name       String
  last_name  String?
  adress     String?
  phone      String?
  permission String   @default("client")
  orders     Orders[]
}

model Orders {
  id               Int               @id @default(autoincrement())
  value            Float             @default(0)
  user             User              @relation(fields: [user_id], references: [id])
  user_id          Int
  done             Boolean           @default(false)
  created_at       DateTime          @default(now())
  coupon           Discount?         @relation(fields: [applied_coupon], references: [id])
  applied_coupon   Int?
  ordered_products OrderedProducts[]
}

model Product {
  id               Int               @id @default(autoincrement())
  name             String
  description      String            @default("")
  image            String
  variation        String?
  value            Float             @default(0)
  quantity         Quantity[]
  ordered_products OrderedProducts[]
  categories       ProductCategory[]
  promotion        Promotion?        @relation(fields: [promotion_id], references: [id])
  promotion_id     Int?
  products_link    ProductsLink?     @relation(fields: [products_link_id], references: [id])
  products_link_id Int?
}

model OrderedProducts {
  id         Int     @id @default(autoincrement())
  product    Product @relation(fields: [product_id], references: [id])
  product_id Int
  order      Orders  @relation(fields: [order_id], references: [id])
  order_id   Int
  quantity   Int     @default(0)
  size       Size    @relation(fields: [size_id], references: [id])
  size_id    Int
}

model Size {
  id               Int               @id @default(autoincrement())
  name             String            @unique
  quantity         Quantity[]
  ordered_products OrderedProducts[]
}

model Quantity {
  id         Int     @id @default(autoincrement())
  size       Size    @relation(fields: [size_id], references: [id])
  size_id    Int
  quantity   Int     @default(0)
  product    Product @relation(fields: [product_id], references: [id])
  product_id Int
}

model Category {
  id      Int               @id @default(autoincrement())
  name    String            @unique
  product ProductCategory[]
}

model ProductCategory {
  id          Int      @id @default(autoincrement())
  category    Category @relation(fields: [category_id], references: [id])
  product     Product  @relation(fields: [product_id], references: [id])
  category_id Int
  product_id  Int
}

model Discount {
  id     Int      @id @default(autoincrement())
  coupon String   @unique
  value  Int
  orders Orders[]
}

model Promotion {
  id      Int       @id @default(autoincrement())
  value   Int       @unique
  product Product[]
}

model ProductsLink {
  id      Int       @id @default(autoincrement())
  product Product[]
}
